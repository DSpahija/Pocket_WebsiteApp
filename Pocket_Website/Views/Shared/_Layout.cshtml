<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</head>
<body style="background-color:#252E3B;font-family:'Century Gothic';font-size:16px;">
    <div class="loading" id="loading">

    </div>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:#1A2028;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" style="background-color:#1A2028">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Pocket", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", @style = "color:#E6B31E; font-size:20px;" })
            </div>
            <div class="navbar-collapse collapse">
                @if (User.Identity.IsAuthenticated)
                {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "UserHome")</li>
                        <li>@Html.ActionLink("Expenses", "Expenses", "UserHome")</li>
                        <li>@Html.ActionLink("Incomes", "Incomes", "UserHome")</li>
                        <li>@Html.ActionLink("Reports", "Reports", "UserHome")</li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li style="margin-right:2px;">@Html.ActionLink("Settings", "Settings", "UserHome")</li>
                        <li class="navbar-brand">
                            @using (Html.BeginForm("Logout", "User", FormMethod.Post, new { id = "logoutform" }))
                            {
                                <a class="navbar-link" style="text-decoration:none; font-size:16px" href="javascript:document.getElementById('logoutform').submit()">Log out</a>
                            }
                        </li>
                    </ul>
                }
                else
                {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("Login", "Login", "User")</li>
                    </ul>
                }

            </div>
        </div>
    </div>
    <div class="container body-content" style="color:white">
        @RenderBody()
        <hr />
        <footer style="font-size:16px;">
            <div style="float:left;" class="col-md-4">
                <img src="~/Assets/PocketLogo.png" height="80" width="80" style="float:left" />
                <h2 style="color:#E6B31E; margin:20px 0; padding:0">POCKET</h2>
            </div>
            <div class="col-md-4" style=" margin-top:20px;">
                <p>Account</p>
                <p style="margin-bottom:6px">
                    @Html.ActionLink("Login", "Login", "User")
                </p>
                <p style="margin-bottom:6px">
                    @Html.ActionLink("Register", "Registration", "User")
                </p>
                <p>
                    @Html.ActionLink("Forgot password?", "Login", "User")
                </p>
            </div>
            <div class="row">
                <div class="col-md-4" style=" margin-top:20px;">
                    <p>Follow us:</p>
                    <div>
                        <div class="imgsocial" style="margin-right:20px">
                            <a href="https://www.facebook.com">
                                <img src="~/Assets/facebook.png" width="30" height="30" />
                                <img src="~/Assets/facebookwhite.png" width="30" height="30" class="img-hover" />
                            </a>
                        </div>
                        <div class="imgsocial" style="margin-right:20px">
                            <img src="~/Assets/insta.png" width="30" height="30" />
                            <a href="https://www.instagram.com">
                                <img src="~/Assets/instagramwhite.png" width="30" height="30" class="img-hover" />
                            </a>
                        </div>

                        <div class="imgsocial" style="margin-right:20px">
                            <img src="~/Assets/linkedin.png" width="30" height="30" />
                            <a href="https://www.linkedin.com">
                                <img src="~/Assets/linkedinwhite.png" width="30" height="30"
                                     class="img-hover" />
                            </a>
                        </div>
                    </div>
                    <div style="margin-top:20px;">
                            Language:
                            <ul style="text-decoration:none; list-style:none; margin-top:10px">
                                <li>@Html.ActionLink("English", "ChangeLanguage", "Language", new { Language = "en"}, null)</li>
                                <li>@Html.ActionLink("Shqip", "ChangeLanguage", "Language", new { Language = "al" }, null)</li>
                            </ul>
                    </div>
                </div>
            </div>
            <p class="text-center" style="margin-top:100px;">All Rights Reserved Pocket, &copy; @DateTime.Now.Year</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
